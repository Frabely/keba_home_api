[Unit]
Description=KEBA Home Writer Service (%i)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=keba
Group=keba
WorkingDirectory=/opt/keba_home_api
EnvironmentFile=/etc/keba/keba-home-service-%i.env
ExecStart=/opt/keba_home_api/keba_service
Restart=on-failure
RestartSec=5
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/var/lib/keba

[Install]
WantedBy=multi-user.target
